pipeline {
    agent any

    tools {
        nodejs "Node"  // Ensure you have configured NodeJS tool in Jenkins global settings
    }

    stages {
   
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                // Add your test command here, if available
                sh 'echo "No tests available"'
            }
        }
       
     
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t amitkasera2001/ci-cd-pipeline2 .'
                }
            }
        }
     
        stage('Run') {
            steps {
                sh 'node index.js'
            }
        }
    }
}
